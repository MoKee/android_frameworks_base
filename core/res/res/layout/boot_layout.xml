<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boot_background_primary_color"
    android:orientation="vertical"
    android:padding="@dimen/boot_margin">

    <ImageView
        android:layout_width="@dimen/boot_logo_size"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/boot_brand_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/boot_background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/boot_icon"
                android:layout_width="@dimen/boot_icon_size"
                android:layout_height="@dimen/boot_icon_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/boot_icon_margin"
                android:scaleType="centerInside"
                tools:src="@drawable/boot_brand_logo" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:animateLayoutChanges="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/boot_message"
                    style="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:lines="1"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/boot_msg_color"
                    tools:text="Optimizing app 4 of 100." />
                <TextView
                    android:id="@+id/boot_message_detail"
                    style="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:lines="1"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/boot_msg_color"
                    android:visibility="gone"
                    tools:text="(org.namelessrom.platform.internal)"
                    tools:visibility="visible" />
            </LinearLayout>
            <Space
                android:layout_width="@dimen/boot_icon_size"
                android:layout_height="@dimen/boot_icon_size"
                android:layout_margin="@dimen/boot_icon_margin" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/boot_progress"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            tools:progress="10" />
    </LinearLayout>
</LinearLayout>
